syntax on
filetype on
filetype plugin on
filetype indent on
set nocompatible
set number
set shiftwidth=4
set tabstop=4
set expandtab
set nobackup
set scrolloff=10
set wrap 
set incsearch
set ignorecase
set smartcase
set showcmd
set showmode
set showmatch
set hlsearch
set history=1000
set wildmenu
set wildignore=*.docx,*.jpg,*.png,*.gif,*.pdf,*.exe,*.flv,*.img,*.xlsx
set mouse=a
